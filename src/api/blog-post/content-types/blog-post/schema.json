{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "displayName": "Blog Post",
    "description": "Blog posts content",
    "pluralName": "blog-posts",
    "singularName": "blog-post"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "category": {
      "type": "string"
    },
    "excerpt": {
      "type": "text"
    },
    "content": {
      "type": "blocks"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "date": {
      "type": "date"
    },
    "readTime": {
      "type": "string"
    }
  }
}
